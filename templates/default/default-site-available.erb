server {
  listen 443 ssl default_server;
  listen [::]:443 ssl default_server;

  ssl_certificate /etc/ssl/mycerts/<%= @site %>.crt;
  ssl_certificate_key /etc/ssl/myerts/<%= @site %>.key;

  root /var/www/html;

  index index.html index.htm index.nginx-debian.html;

  server_name _;

  location / {
    try_files $uri $uri/ =404;
  }
}
